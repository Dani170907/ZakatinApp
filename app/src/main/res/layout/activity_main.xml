<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">
//fdsafdsa
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_banner"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/header_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/header_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Header background" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#40000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="4dp"
            android:text="ZAKATIN"
            android:textColor="#4CAF50"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_subtitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Penghitung zakat lengkap"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"> <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/menu_flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:constraint_referenced_ids="menu_zakat,menu_pelajari,menu_tata_cara,menu_dalil,menu_laporan,menu_pengaturan"
            app:flow_horizontalGap="16dp"
            app:flow_horizontalStyle="spread_inside"
            app:flow_maxElementsWrap="2"
            app:flow_verticalGap="16dp"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" /> <LinearLayout
            android:id="@+id/menu_zakat"
            style="@style/MenuItem"
            tools:ignore="MissingConstraints"
            android:contentDescription="Menu Hitung Zakat">
            <ImageView
                style="@style/MenuIcon"
                android:src="@drawable/ic_zakat_placeholder"
                android:contentDescription="Ikon zakat" />
            <TextView
                style="@style/MenuLabel"
                android:text="ZAKAT" />
            <TextView
                style="@style/MenuSubLabel"
                android:text="Hitung" />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_pelajari"
                style="@style/MenuItem"
                tools:ignore="MissingConstraints"
                android:contentDescription="Menu Pelajari Zakat">
                <ImageView
                    style="@style/MenuIcon"
                    android:src="@drawable/ic_pelajari_placeholder"
                    android:contentDescription="Ikon pelajari" />
                <TextView
                    style="@style/MenuLabel"
                    android:text="PELAJARI" />
                <TextView
                    style="@style/MenuSubLabel"
                    android:text="Ilmu zakat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_tata_cara"
                style="@style/MenuItem"
                tools:ignore="MissingConstraints"
                android:contentDescription="Menu Tata Cara Zakat">
                <ImageView
                    style="@style/MenuIcon"
                    android:src="@drawable/ic_tata_cara_placeholder"
                    android:contentDescription="Ikon tata cara" />
                <TextView
                    style="@style/MenuLabel"
                    android:text="TATA CARA" />
                <TextView
                    style="@style/MenuSubLabel"
                    android:text="Melakukan zakat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_dalil"
                style="@style/MenuItem"
                tools:ignore="MissingConstraints"
                android:contentDescription="Menu Dalil Zakat">
                <ImageView
                    style="@style/MenuIcon"
                    android:src="@drawable/ic_dalil_placeholder"
                    android:contentDescription="Ikon dalil" />
                <TextView
                    style="@style/MenuLabel"
                    android:text="DALIL" />
                <TextView
                    style="@style/MenuSubLabel"
                    android:text="zakat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_laporan"
                style="@style/MenuItem"
                tools:ignore="MissingConstraints"
                android:contentDescription="Menu Laporan Zakat">
                <ImageView
                    style="@style/MenuIcon"
                    android:src="@drawable/ic_laporan_placeholder"
                    android:contentDescription="Ikon laporan" />
                <TextView
                    style="@style/MenuLabel"
                    android:text="LAPORAN" />
                <TextView
                    style="@style/MenuSubLabel"
                    android:text="Melakukan zakat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_pengaturan"
                style="@style/MenuItem"
                tools:ignore="MissingConstraints"
                android:contentDescription="Menu Pengaturan Aplikasi">
                <ImageView
                    style="@style/MenuIcon"
                    android:src="@drawable/ic_pengaturan_placeholder"
                    android:contentDescription="Ikon pengaturan" />
                <TextView
                    style="@style/MenuLabel"
                    android:text="PENGATURAN" />
                <TextView
                    style="@style/MenuSubLabel"
                    android:text="Aplikasi" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>