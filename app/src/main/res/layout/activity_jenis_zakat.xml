<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".JenisZakatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_container"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Tombol kembali"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih zakat"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_pilih_zakat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Pilih zakat yang akan dihitung"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_container" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_syarat_zakat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/green_primary"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Syarat Zakat"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_pilih_zakat_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_pilih_zakat_title" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pilih_zakat_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/zakat_types_flow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:constraint_referenced_ids="card_zakat_fitrah,card_zakat_tabungan,card_zakat_emas,card_zakat_perak,card_zakat_ternak,card_zakat_perdagangan,card_zakat_profesi,card_zakat_investasi,card_zakat_rikaz"
                app:flow_horizontalGap="16dp"
                app:flow_horizontalStyle="spread_inside"
                app:flow_maxElementsWrap="3"
                app:flow_verticalGap="16dp"
                app:flow_wrapMode="chain"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/card_zakat_fitrah"
                style="@style/ZakatTypeCard"
                android:contentDescription="Pilih Zakat Fitrah">
                <TextView
                    style="@style/ZakatTypeLabel"
                    android:text="Zakat" />
                <TextView
                    style="@style/ZakatTypeSubLabel"
                    android:text="Fitrah" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_zakat_tabungan"
                style="@style/ZakatTypeCard"
                android:contentDescription="Pilih Zakat Tabungan">
                <TextView
                    style="@style/ZakatTypeLabel"
                    android:text="Zakat" />
                <TextView
                    style="@style/ZakatTypeSubLabel"
                    android:text="Tabungan" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_zakat_emas"
                style="@style/ZakatTypeCard"
                android:contentDescription="Pilih Zakat Emas">
                <TextView
                    style="@style/ZakatTypeLabel"
                    android:text="Zakat" />
                <TextView
                    style="@style/ZakatTypeSubLabel"
                    android:text="Emas" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_zakat_perak"
                style="@style/ZakatTypeCard"
                android:contentDescription="Pilih Zakat Perak">
                <TextView
                    style="@style/ZakatTypeLabel"
                    android:text="Zakat" />
                <TextView
                    style="@style/ZakatTypeSubLabel"
                    android:text="Perak" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_zakat_ternak"
                style="@style/ZakatTypeCard"
                android:contentDescription="Pilih Zakat Ternak">
                <TextView
                    style="@style/ZakatTypeLabel"
                    android:text="Zakat" />
                <TextView
                    style="@style/ZakatTypeSubLabel"
                    android:text="Ternak" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_zakat_perdagangan"
                style="@style/ZakatTypeCard"
                android:contentDescription="Pilih Zakat Perdagangan">
                <TextView
                    style="@style/ZakatTypeLabel"
                    android:text="Zakat" />
                <TextView
                    style="@style/ZakatTypeSubLabel"
                    android:text="Perdagangan" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_zakat_profesi"
                style="@style/ZakatTypeCard"
                android:contentDescription="Pilih Zakat Profesi">
                <TextView
                    style="@style/ZakatTypeLabel"
                    android:text="Zakat" />
                <TextView
                    style="@style/ZakatTypeSubLabel"
                    android:text="Profesi" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_zakat_investasi"
                style="@style/ZakatTypeCard"
                android:contentDescription="Pilih Zakat Investasi">
                <TextView
                    style="@style/ZakatTypeLabel"
                    android:text="Zakat" />
                <TextView
                    style="@style/ZakatTypeSubLabel"
                    android:text="Investasi" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_zakat_rikaz"
                style="@style/ZakatTypeCard"
                android:contentDescription="Pilih Zakat Rikaz">
                <TextView
                    style="@style/ZakatTypeLabel"
                    android:text="Zakat" />
                <TextView
                    style="@style/ZakatTypeSubLabel"
                    android:text="Rikaz" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>